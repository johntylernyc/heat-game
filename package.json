{
  "name": "heat-game",
  "version": "0.1.0",
  "description": "Web-based multiplayer board game inspired by Heat: Pedal to the Metal",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"tsx watch src/server/dev.ts\" \"vite --config vite.config.ts\"",
    "build": "vite build --config vite.config.ts && tsc --noEmit",
    "start": "tsx src/server/prod.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.1.2",
    "jsdom": "^28.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.3.5",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.6.1",
    "tsx": "^4.21.0",
    "ws": "^8.19.0"
  }
}
